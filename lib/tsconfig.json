{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": false,
        "baseUrl": "./",
        "paths": {
            "*": [
                "src/*",
                "node_modules/*"
            ]
        },
        "removeComments": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "**/__tests__/*",
        "examples"
    ]
}